{
    "ConnectionStrings": {
        "pacsDataArchieve": "Server=localhost,1433;Initial Catalog=DICOMcloud;Integrated Security=True;User Id=sa;Password=Password123#",
        "pacsStorageConnection": "|DataDirectory|/App_Data/Storage/ds"
    },
    "Urls": {
        "WadoRsUrl": "http://localhost:44301/wadors/",
        "WadoUriUrl": "http://localhost:44301/wadouri"
    },
    "Anonymous": {
        "EnableAnonymizer": "true",
        "AnonymizerOptions": "BasicProfile,RetainUIDs,RetainLongFullDates,RetainPatientChars"
    },
    "Other": {
        "SupportPreSignedUrls": "true"
    },
    "Qido": {
        "MaximumResultsLimit" : "12"
    },
    "StorageCommand": {
        "ValidateDuplicateInstance": "",
        "StoreOriginalDataset": "",
        "StoreQueryModel": ""
    },
    "AllowedHosts": "*",
    "Service": {
        "Title": "DICOMcloud",
        "Description": "The DICOMcloud is a standalone DICOMweb server with RESTful implementation of the DICOMweb/WADO services",
        "Version": "v1"
    },
    "NLog": {
        "internalLogLevel": "Info",
        "internalLogFile": "./log/internal-nlog.txt",
        "extensions": {
            "NLog.Web.AspNetCore": {
                "assembly": "NLog.Web.AspNetCore"
            }
        },
        "targets": {
            "allfile": {
                "type": "File",
                "fileName": "./log/DICOMcloud.log",
                "layout": "${longdate}|${event-properties:item=EventId_Id}|${uppercase:${level}}|${logger}|${message} ${exception:format=tostring}",
                "archiveEvery": "Day",
                "archiveFileName": "./log/DICOMcloud-{########}.log",
                "archiveNumbering": "Date",
                "archiveDateFormat": "yyyyMMdd",
                "maxArchiveFiles": "5"
            }
        },
        "rules": [
            {
                "logger": "*", "minLevel": "Debug", "writeTo": "allfile"
            },
            {
                "logger": "Microsoft.*",
                "maxLevel": "Info",
                "final": "true"
            }
        ]
    },
    "Authentication": {
        "Authority": "https://localhost/sso",
        "RequireHttpsMetadata": true,
        "Audience": "audience1"
    },
    "Logging": {
        "IncludeScopes": false,
        "LogLevel": {
            "Default": "Debug",
            "System": "Information",
            "Microsoft": "Information"
        }
    }
}